@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "用户信息编辑";
}
@Html.Partial("_PartialHead")

@section Styles{
    <style type="text/css">
      .editContent{background:url(../Content/images/backMine.jpg);min-height:90vh;background-size:100% 100%;background-color:#f4e2d1 }
      .editContent .contentItem{margin-top:0.3rem;width:90%;margin:auto}
         .editContent .contentItem .iconItembox{line-height:1.3rem;}
         .editContent .contentItem .iconItem{width:28%;align-self:center}
         .ItemContent{border-bottom:1px solid #d7d2cf}
         .editContent .foot{width:80%;margin:0 auto;margin-top:2rem}
          .editContent .foot button{height:1rem;width:100%; border-radius:0.12rem; line-height:1rem;background-color:#e3453d}
          .marginDiv{height:0.27rem;background-color:#f0f0f0}
          .offerIdea{display:block;margin:auto;width:0.78rem;height:0.78rem; background:url(..//Content/images/offerIdear.png);background-size:100% 100%}
          .lefticon{border-bottom:1px solid #d7d2cf;width:1.7rem !important}
          .getCode{height:0.9rem;width:90%;  background-color:#e4625b;border-radius:0.12rem}
   .inputBack{background-color:transparent}
    </style>
    }
<div class="editContent pd12x0">
    <div class="contentItem gray8 mb20">
        <div class="flex-box iconItembox ">
            <div class="flex-cont ItemContent tal iconItem rem18">昵称:</div>
            <div class="flex-cont ItemContent tal  rem18"><input class="inputBack" type="text" placeholder="请输入昵称" /> </div>
        </div>
        <div class="flex-box iconItembox">
            <div class="flex-cont ItemContent tal iconItem rem18">手机号:</div>
            <div class="flex-cont ItemContent rem18  tal"><input class="inputBack" type="text" placeholder="请输入手机号码" /> </div>
        </div>
        <div class="flex-box iconItembox">
            <div class="flex-cont ItemContent"><input type="text"class="inputBack rem18" placeholder="请输入验证码" /></div>
            <div class="flex-cont ItemContent rem18  tal"><button class="getCode rem16 c-fff">获取验证码</button></div>
        </div>
        <div class="flex-box iconItembox">
            <div class="flex-cont ItemContent tal iconItem rem18">邮箱:</div>
            <div class="flex-cont ItemContent rem18  tal"><input class="inputBack" type="text" placeholder="请输入邮箱" /> </div>
        </div>
    </div>
    <div class="foot">
        <button class="tac rem18 c-fff">保存</button>
    </div>


</div>



